@model Gert.Model.DataBase.Model.Professor

<script>
    $.validator.unobtrusive.parse(document);

    function gravacaoOk() {
        $("#dlgProfessor").modal("hide");
        $('body').removeClass('modal-open');
        $('.modal-backdrop').remove();
        $("#Nome").val("");
    }
</script>

<div id="dlgProfessor" class="modal fade" role="dialog">
    @using (Ajax.BeginForm("GravarProfessor", "Instituicao", new AjaxOptions()
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "areaComum",
        HttpMethod = "post",
        OnSuccess = "gravacaoOk"
    }))
    {
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Novo Professor</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <button type="button" class="btn btn-primary" data-dismiss="modal"> Fechar</button>
                            <button type="submit" class="btn btn-success"> Gravar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>