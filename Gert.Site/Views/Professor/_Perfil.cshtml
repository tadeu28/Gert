@model Gert.Model.DataBase.Model.Professor

<div class="col-md-6">    
    @using (Html.BeginForm("AlterarUsuario", "Professor", FormMethod.Post))
    {
        <div class="dl-horizontal">
            <div class="input-group">
                <span class="input-group-addon" id="sizing-addon2"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(model => model.Nome, new Dictionary<string, object>() { { "class", "form-control" }, { "aria-describedby", "sizing-addon2" } })                
            </div>
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })

            @Html.Partial("_AddUsuario", Model.Usuario)
        </div>

        <br/>
        <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-floppy-save"></i> Gravar Alteração</button>
    }
</div>
