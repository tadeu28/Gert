@using Gert.Model.Utils

@model IEnumerable<Gert.Model.DataBase.Model.Tarefa>

@{ 
    var prof = LoginUtils.Usuario.Professor;
}

<h2>Tarefas - @prof.Nome</h2>

<table class="table table-striped table-condensed table-hover table-responsive">
    <tr>
        <th>
            @Html.DisplayName("Disciplina")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DtInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DtFinal)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Disciplina.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DtInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DtFinal)
        </td>        
    </tr>
}

</table>
