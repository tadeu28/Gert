<script language="javascript" type="text/javascript">
    
    function sucessoLogin(data) {

        if (!data.success) {
            console.log(data);
            $("#alertaNotificacao").notify({
                message: { text: data.Message + " " },
                type: "danger"
            }).show();
        } else {
            window.location.replace(data.Message);
        }
    }
</script>

